{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "ts-node": { "esm": true },
  "exclude": ["node_modules", "**/*.d.ts", "build"],
  "include": ["**/*.ts", "src/routes", "src/config/dbScript.ts", "src/services/schedule.services.js"]
}